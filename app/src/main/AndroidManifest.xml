<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trialproject.lexis.theacademicpartnertrial">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".other.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".projectactivities.Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.SplashNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TimetableActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.trialproject.lexis.theacademicpartnertrial.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignIn"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SignUp"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".projectactivities.FinalSignUp"
            android:label="@string/title_activity_final_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SignUpSuccess"
            android:label="@string/title_activity_sign_up_success"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ActivityUsingTabLibrary"
            android:label="Activity Using Tab Library"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".projectactivities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".projectactivities.TimetableByDay"
            android:label="@string/title_activity_timetable_by_day"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".projectactivities.DayActivity"
            android:label="@string/title_activity_day"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>